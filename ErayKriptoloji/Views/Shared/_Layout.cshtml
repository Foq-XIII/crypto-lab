<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ErayKriptoloji</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ErayKriptoloji.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            position: relative;
            z-index: 100;
            background-color: #0f0f0f;
        }

        .navbar-brand {
            color: #00bfff !important;
            font-weight: bold;
            font-size: 1.5rem;
            text-shadow: 0 0 8px #00bfff;
            z-index: 101;
        }

            .navbar-brand:hover {
                color: #00ffff !important;
                text-shadow: 0 0 10px #00ffff;
            }

        .colorful-background,
        .matrix-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <!-- Renkli arka plan efektleri -->
    <div class="colorful-background"></div>
    <div class="matrix-overlay"></div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ErayKriptoloji</a>
                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Menü elemanları -->
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4 position-relative" style="z-index: 10;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center mt-5 text-muted" style="z-index: 10; position: relative;">
        <div class="container">
            &copy; 2025 - ErayKriptoloji
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
